<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mywaytech.puppiessearchclient">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".controllers.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name=".controllers.NewUserActivity"></activity>
        <activity android:name=".controllers.MainActivity"></activity>
        <activity android:name=".controllers.LoginActivity"></activity>
        <activity android:name=".controllers.NewPetActivity"></activity>
        <activity android:name=".controllers.AccountActivity"></activity>
        <activity android:name=".controllers.MapActivity"></activity>

    </application>

</manifest>
