<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Captura de Documentos"
            android:textColor="@color/colorAccent"
            android:textSize="20sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--<CheckBox-->
            <!--android:id="@+id/dialog_ci_checkbox"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_alignParentLeft="true"/>-->

            <TextView
                android:id="@+id/dialog_ci_txt"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Cédula / Pasaporte" />
            <!--android:layout_toRightOf="@+id/dialog_ci_checkbox"-->


            <ImageView
                android:id="@+id/dialog_ci_image"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />




        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--<CheckBox-->
            <!--android:id="@+id/dialog_certificate_checkbox"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentLeft="true"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:clickable="false"/>-->

            <TextView
                android:id="@+id/dialog_certificate_txt"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Certificado" />
            <!--android:layout_toRightOf="@+id/dialog_certificate_checkbox"-->


            <ImageView
                android:id="@+id/dialog_certificate_image"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />




        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--<CheckBox-->
            <!--android:id="@+id/dialog_photo_checkbox"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentLeft="true"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:clickable="false"/>-->

            <TextView
                android:id="@+id/dialog_photo_txt"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Fotografía" />
            <!--android:layout_toRightOf="@+id/dialog_photo_checkbox"-->

            <ImageView
                android:id="@+id/dialog_photo_image"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />




        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bton_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Aceptar"
                android:textColor="@color/colorPrimary"
                android:background="@android:color/transparent"/>




        </LinearLayout>


    </LinearLayout>
</LinearLayout>